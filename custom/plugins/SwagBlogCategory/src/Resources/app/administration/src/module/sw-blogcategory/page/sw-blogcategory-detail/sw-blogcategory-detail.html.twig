<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_blogcategory_detail %}
    <sw-page class="sw-blogcategory-detail">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_detail_header %}
            <template #smart-bar-header>
                <h2>{{ placeholder(blogcategory, 'name', $tc('sw-blogcategory.detail.textHeadline')) }}</h2>
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_detail_actions %}
            <template #smart-bar-actions>
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blogcategory_detail_actions_abort %}
                    <sw-button
                        v-tooltip.bottom="tooltipCancel"
                        :disabled="blogcategoryIsLoading"
                        @click="onCancel"
                    >
                        {{ $tc('sw-blogcategory.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blogcategory_detail_actions_save %}
                    <sw-button-process
                        v-model="isSaveSuccessful"
                        v-tooltip.bottom="tooltipSave"
                        class="sw-blogcategory-detail__save-action"
                        :is-loading="isLoading"
                        :disabled="isLoading || !acl.can('blog_category.editor')"
                        variant="primary"
                        @click.prevent="onSave"
                    >
                        {{ $tc('sw-blogcategory.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_detail_language_switch %}
            <template #language-switch>
                <sw-language-switch
                    :disabled="blogcategoryId == null"
                    :save-changes-function="saveOnLanguageChange"
                    :abort-change-function="abortOnLanguageChange"
                    @on-change="onChangeLanguage"
                />
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_detail_content %}
            <sw-card-view slot="content">
                <template v-if="blogcategoryIsLoading">
                    <sw-skeleton variant="detail-bold" />
                    <sw-skeleton />
                </template>

                <template v-else>

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_detail_content_language_info %}
                        <sw-language-info
                            :entity-description="placeholder(blogcategory, 'name', $tc('sw-blogcategory.detail.textHeadline'))"
                        />
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_detail_base_basic_info_card %}
                        <sw-card
                            position-identifier="sw-blogcategory-detail-basic-info"
                            :title="$tc('sw-blogcategory.detail.cardTitleBlogCategoryInfo')"
                        >
                            <sw-container
                                class="sw-blogcategory-detail__container"
                                columns="repeat(auto-fit, minmax(250px, 1fr))"
                                gap="0 30px"
                            >
                                <div class="sw-blogcategory-detail__base-info-wrapper">

                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                    {% block sw_blogcategory_detail_base_info_field_name %}
                                        <sw-field
                                            v-model="blogcategory.name"
                                            type="text"
                                            :label="$tc('sw-blogcategory.detail.labelName')"
                                            :placeholder="placeholder(blogcategory, 'name', $tc('sw-blogcategory.detail.placeholderName'))"
                                            name="name"
                                            validation="required"
                                            required
                                            :error="blogcategoryNameError"
                                            :disabled="!acl.can('blog_category.editor')"
                                        />
                                    {% endblock %}
                                </div>
                            </sw-container>
                        </sw-card>
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_detail_custom_field_sets %}
                        <sw-card
                            v-if="customFieldSets.length > 0"
                            position-identifier="sw-blogcategory-detail-custom-field-sets"
                            :title="$tc('sw-settings-custom-field.general.mainMenuItemGeneral')"
                            :is-loading="blogcategoryIsLoading"
                        >
                            <sw-custom-field-set-renderer
                                v-if="blogcategory"
                                :entity="blogcategory"
                                :sets="customFieldSets"
                                :disabled="!acl.can('blog_category.editor')"
                            />
                        </sw-card>
                    {% endblock %}
                </template>
            </sw-card-view>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_manufacturer_detail_sidebar %}
            <template slot="sidebar">
                <sw-sidebar :propagate-width="true">
                    <sw-sidebar-media-item
                        ref="mediaSidebarItem"
                        :disabled="!acl.can('blog_category.editor')"
                    >
                        <template
                            slot="context-menu-items"
                            slot-scope="media"
                        >
                            <sw-context-menu-item @click="setMediaFromSidebar(media.mediaItem)">
                                {{ $tc('sw-blogcategory.detail.labelUseAsLogo') }}
                            </sw-context-menu-item>
                        </template>
                    </sw-sidebar-media-item>
                </sw-sidebar>
            </template>
        {% endblock %}

    </sw-page>
{% endblock %}
