<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_blogcategory_list %}
    <sw-page class="sw-blogcategory-list">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_list_search_bar %}
            <template #search-bar>
                <sw-search-bar
                    initial-search-type="blog category"
                    :initial-search="term"
                    @search="onSearch"
                />
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_list_smart_bar_header %}
            <template #smart-bar-header>
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blogcategory_list_smart_bar_header_title %}
                    <h2>
                        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                        {% block sw_blogcategory_list_smart_bar_header_title_text %}
                            {{ $tc('sw-blogcategory.list.textBlogCategoryOverview') }}
                        {% endblock %}

                        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                        {% block sw_blogcategory_list_smart_bar_header_amount %}
                            <span
                                v-if="!isLoading"
                                class="sw-page__smart-bar-amount"
                            >
                ({{ total }})
            </span>
                        {% endblock %}
                    </h2>
                {% endblock %}
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_list_actions %}
            <template #smart-bar-actions>
                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_blogcategory_list_smart_bar_actions %}
                    <sw-button
                        v-tooltip.bottom="{
                message: $tc('sw-privileges.tooltip.warning'),
                disabled: acl.can('blog_category.creator'),
                showOnDisabledElements: true
            }"
                        :router-link="{ name: 'sw.blogcategory.create' }"
                        :disabled="!acl.can('blog_category.creator')"
                        class="sw-blogcategory-list__add-blogcategory"
                        variant="primary"
                    >
                        {{ $tc('sw-blogcategory.list.buttonAddBlogCategory') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_blogcategory_list_language_switch %}
            <template #language-switch>
                <sw-language-switch @on-change="onChangeLanguage" />
            </template>
        {% endblock %}

        <template #content>
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_blogcategory_list_content %}
                <div class="sw-blogcategory-list__content">
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_list_grid %}
                        <sw-entity-listing
                            v-if="entitySearchable"
                            class="sw-blogcategory-list__grid"
                            detail-route="sw.blogcategory.detail"
                            :is-loading="isLoading"
                            :columns="blogCategoryColumns"
                            :repository="blogcategoryRepository"
                            :items="blogcategory"
                            :criteria-limit="limit"
                            :sort-by="currentSortBy"
                            :sort-direction="sortDirection"
                            :disable-data-fetching="true"
                            :allow-edit="acl.can('blog_category.editor')"
                            :allow-inline-edit="acl.can('blog_category.editor')"
                            :allow-delete="acl.can('blog_category.deleter')"
                            :show-selections="acl.can('blog_category.deleter')"
                            identifier="sw-blogcategory-list"
                            @update-records="updateTotal"
                            @page-change="onPageChange"
                            @column-sort="onSortColumn"
                        >
                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_testdemo_list_content_list_created_at %}
                                <template #column-createdAt="{ item }">
                                    {{ item.createdAt | date({hour: '2-digit', minute: '2-digit', second: '2-digit'}) }}
                                </template>
                            {% endblock %}

                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_blogcategory_list_grid_columns_name_preview %}
                                <template #preview-name="{ item }">
                                    <sw-media-preview-v2 :source="item.mediaId" />
                                </template>
                            {% endblock %}
                        </sw-entity-listing>
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_list_empty_state %}
                        <sw-empty-state
                            v-if="!isLoading && !total && isValidTerm(term)"
                            :title="$tc('sw-empty-state.messageNoResultTitle')"
                        >
                            <template #default>
                                {{ $tc('sw-empty-state.messageNoResultSublineBefore') }}
                                <router-link
                                    class="sw-empty-state__description-link"
                                    :to="{ name: 'sw.profile.index.searchPreferences' }"
                                >
                                    {{ $tc('sw-empty-state.messageNoResultSublineLink') }}
                                </router-link>
                                {{ $tc('sw-empty-state.messageNoResultSublineAfter') }}
                            </template>
                        </sw-empty-state>
                    {% endblock %}

                    {# @deprecated tag:v6.5.0 - Will be removed #}
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_blogcategory_list_grid_loader %}{% endblock %}
                </div>
            {% endblock %}
        </template>
    </sw-page>
{% endblock %}
