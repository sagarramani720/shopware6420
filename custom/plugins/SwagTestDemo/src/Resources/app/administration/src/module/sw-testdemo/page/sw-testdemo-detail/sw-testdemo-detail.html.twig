<!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
{% block sw_testdemo_detail %}
    <sw-page class="sw-testdemo-detail">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_testdemo_detail_header %}
            <template #smart-bar-header>
                <h2>{{ placeholder(testdemo, 'name', $tc('sw-testdemo.detail.textHeadline')) }}</h2>
            </template>

        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_testdemo_detail_actions %}
            <template #smart-bar-actions>

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_testdemo_detail_actions_abort %}
                    <sw-button
                        v-tooltip.bottom="tooltipCancel"
                        :disabled="testdemoIsLoading"
                        @click="onCancel"
                    >
                        {{ $tc('sw-testdemo.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_testdemo_detail_actions_save %}
                    <sw-button-process
                        v-model="isSaveSuccessful"
                        v-tooltip.bottom="tooltipSave"
                        class="sw-testdemo-detail__save-action"
                        :is-loading="isLoading"
                        variant="primary"
                        @click.prevent="onSave"
                    >
                        {{ $tc('sw-testdemo.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_testdemo_detail_language_switch %}
            <template #language-switch>
                <sw-language-switch
                    :disabled="testdemoId == null"
                    :save-changes-function="saveOnLanguageChange"
                    :abort-change-function="abortOnLanguageChange"
                    @on-change="onChangeLanguage"
                />
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_testdemo_detail_content %}
            <sw-card-view slot="content">
                <template v-if="testdemoIsLoading">
                    <sw-skeleton variant="detail-bold" />
                    <sw-skeleton />
                </template>

                <template v-else>

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_testdemo_detail_content_language_info %}
                        <sw-language-info
                            :entity-description="placeholder(testdemo, 'name', $tc('sw-testdemo.detail.textHeadline'))"
                        />
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_testdemo_detail_base_basic_info_card %}
                        <sw-card
                            position-identifier="sw-testdemo-detail-basic-info"
                            :title="$tc('sw-testdemo.detail.cardTitleTestdemoInfo')"
                        >
                            <sw-container
                                class="sw-testdemo-detail__container"
                                columns="repeat(auto-fit, minmax(250px, 1fr))"
                                gap="0 30px"
                            >
                                <div class="sw-testdemo-detail__base-info-wrapper">

                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_testdemo_detail_base_info_field_name %}
                                    <sw-field
                                        v-model="testdemo.name"
                                        type="text"
                                        :label="$tc('sw-testdemo.detail.labelName')"
                                        :placeholder="placeholder(testdemo, 'name', $tc('sw-testdemo.detail.placeholderName'))"
                                        name="name"
                                        validation="required"
                                        required
                                        :error="testdemoNameError"
                                    />
                                {% endblock %}

                                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                                {% block sw_testdemo_detail_base_info_field_city %}
                                    <sw-field
                                        v-model="testdemo.city"
                                        type="text"
                                        :label="$tc('sw-testdemo.detail.cityLabelName')"
                                        :placeholder="placeholder(testdemo, 'city', $tc('sw-testdemo.detail.cityPlaceholderName'))"
                                        name="city"
                                        validation="required"
                                        required
                                        :error="testdemoCityError"
                                    />
                                {% endblock %}

                            </div>

                                <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_testdemo_detail_logo_upload %}
                                <sw-upload-listener
                                    :upload-tag="mediaUploadTag"
                                    auto-upload
                                    @media-upload-finish="setMediaItem"
                                />
                                <sw-media-upload-v2
                                    class="sw-testdemo-detai l__logo-upload"
                                    :source="testdemo.mediaId"
                                    :allow-multi-select="false"
                                    variant="regular"
                                    :upload-tag="mediaUploadTag"
                                    :label="$tc('sw-testdemo.detail.labelLogo')"
                                    :default-folder="testdemoRepository.entityName"
                                    @sw-media-upload-v2-media-upload-success="setMediaItem"
                                    @media-drop="onDropMedia"
                                    @media-upload-sidebar-open="openMediaSidebar"
                                    @media-upload-remove-image="onUnlinkLogo"
                                />
                            {% endblock %}
                        </sw-container>
                    </sw-card>
                {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_testdemo_detail_custom_field_sets %}
                <sw-card
                    v-if="customFieldSets.length > 0"
                    position-identifier="sw-testdemo-detail-custom-field-sets"
                    :title="$tc('sw-settings-custom-field.general.mainMenuItemGeneral')"
                    :is-loading="testdemoIsLoading"
                >
                    <sw-custom-field-set-renderer
                        v-if="testdemo"
                        :entity="testdemo"
                        :sets="customFieldSets"
                    />
                </sw-card>
                {% endblock %}
            </template>
        </sw-card-view>
    {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_testdemo_detail_sidebar %}
            <template slot="sidebar">
            <sw-sidebar :propagate-width="true">
                <sw-sidebar-media-item
                    ref="mediaSidebarItem"
                >
                    <template
                        slot="context-menu-items"
                        slot-scope="media"
                    >
                        <sw-context-menu-item @click="setMediaFromSidebar(media.mediaItem)">
                            {{ $tc('sw-testdemo.detail.labelUseAsLogo') }}
                        </sw-context-menu-item>
                    </template>
                </sw-sidebar-media-item>
            </sw-sidebar>
        </template>
        {% endblock %}
    </sw-page>
{% endblock %}
