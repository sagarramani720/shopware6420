{% block sw_cms_element_high_to_low_product_discount_slider %}
    <div
        class="sw-cms-el-high-to-low-product-discount-slider"
        :class="classes"
        :style="verticalAlignStyle"
    >
        {% block sw_cms_element_high_to_low_product_discount_slider_title %}
            <div
                v-if="element.config.title.value"
                class="sw-cms-el-high-to-low-product-discount-slider__title"
            >
                {{ element.config.title.value }}
            </div>
        {% endblock %}

        {% block sw_cms_element_high_to_low_product_discount_slider_content %}
            <div class="sw-cms-el-high-to-low-product-discount-slider__content">
                {% block sw_cms_element_high_to_low_product_discount_slider_arrow_left %}
                    <div
                        v-if="hasNavigation"
                        class="sw-cms-el-high_to_low_product-discount-slider__navigation"
                    >
                        <sw-icon
                            class="sw-cms-el-high-to-low-product-discount-slider__navigation-button"
                            name="regular-chevron-left"
                            size="24"
                        />
                    </div>
                {% endblock %}

                {% block sw_cms_element_high_to_low_product_discount_slider_product_holder %}
                    <div
                        ref="productHolder"
                        class="sw-cms-el-high-to-low-product-discount-slider__product-holder"
                        :style="sliderBoxMinWidth"
                    >
                        <template v-if="!element.data || !element.data.products">
                            {% block sw_cms_element_high_to_low_product_discount_slider_demo_data %}
                                <sw-cms-el-high-to-low-product-discount-slider-box
                                    v-for="index in sliderBoxLimit"
                                    :key="index"
                                    :element="demoProductElement"
                                />
                            {% endblock %}
                        </template>

                        <template v-else>
                            {% block sw_cms_element_high_to_low_product_discount_slider_products %}
                                <sw-cms-el-high-to-low-product-discount-slider-box
                                    v-for="(product, index) in element.data.products"
                                    v-if="index < sliderBoxLimit"
                                    :key="product.id"
                                    :element="getProductEl(product)"
                                />
                            {% endblock %}
                        </template>
                    </div>
                {% endblock %}

                {% block sw_cms_element_high_to_low_product_discount_slider_arrow_right %}
                    <div
                        v-if="hasNavigation"
                        class="sw-cms-el-high-to-low-product-discount-slider__navigation"
                    >
                        <sw-icon
                            class="sw-cms-el-high-to-low-product-discount-slider__navigation-button"
                            name="regular-chevron-right"
                            size="24"
                        />
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
